.c-toast-container
  position fixed
  display flex
  justify-content flex-start
  align-content: center
  align-items: center
  width 600px
  height 95%
  top 0
  bottom 0
  left 50%
  transform: translate(-50%,0%)
  font-size: 22px
  right 0
  padding 2em
  overflow hidden
  z-index 9999
  pointer-events none

  &--top
    flex-direction column
  &--bottom
    flex-direction column-reverse

  @media screen and (max-width 768px)
    font-size: 16px
    width 399px
    padding 0
    position fixed !important

  @media screen and (max-width 400px)
    font-size: 14px
    width 314px
    padding 0
    position fixed !important
