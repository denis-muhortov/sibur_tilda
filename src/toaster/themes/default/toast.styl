.c-toast
  display flex
  flex-direction: row
  align-items center
  justify-content center
  animation-duration 250ms
  margin 0.5em 0
  border-radius 0.5em
  pointer-events auto
  min-height 3em
  width 100%
  cursor pointer
  font-family "VelaSans", sans-serif
  font-weight 800
  padding 0.5em 2em
  z-index 30
  word-break break-word
  transition: all 0.5s ease
