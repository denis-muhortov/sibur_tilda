.c-toast-container
  position fixed
  display flex
  justify-content flex-start
  align-content center
  align-items center
  width 450px
  height 100%
  bottom 0
  right: 0%
  transform: translate(0%, 0%)
  font-size: 18px
  right 0
  padding 1em
  overflow hidden
  z-index 9999
  pointer-events none
  transition: all 0.5s ease

  &--top
    flex-direction column
  &--bottom
    flex-direction column-reverse

  @media screen and (max-width 768px)
    font-size: 16px
    width 300px
    padding 0
    position fixed !important

  @media screen and (max-width 400px)
    font-size: 14px
    width 250px
    padding 0
    position fixed !important
